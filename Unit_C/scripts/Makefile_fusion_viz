CC = gcc
CFLAGS = -Wall -O2 -std=c99
LDFLAGS = -lm

SOURCES = conv2d.c batchnorm2d.c fusion_visualization.c
OBJECTS = $(SOURCES:.c=.o)
TARGET = fusion_visualization

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -o $(TARGET) $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET) $(TARGET).exe

run: $(TARGET)
	./$(TARGET)

.PHONY: all clean run
